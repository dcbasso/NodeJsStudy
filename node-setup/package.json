{
  "name": "node-setup",
  "version": "0.0.1",
  "author": "Dante Cesar Basso Filho",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --ignore-watch node_modules --no-notify  src/server.ts",
    "dev-transpile": "ts-node-dev --respawn --transpileOnly --ignore-watch node_modules --no-notify  src/server.ts",
    "test": "jest",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored"
  },
  "dependencies": {
    "express": "^4.17.3",
    "typescript": "^4.6.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.14.1"
  }
}
